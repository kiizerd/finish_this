<% section_classlist = "text-sm py-1 px-2 bg-gray-100 rounded shadow-sm hover:shadow-md
                     hover:bg-gray-200 my-2 w-full flex justify-between transform hover:scale-105 transition" %>
<section class="<%= section_classlist %>">
  <span class="font-light"><%= section.name %></span>
  <span class="flex text-xs text-gray-600">
    <%= link_to 'Edit', edit_section_path(section),
                class: "hover:text-gray-800 hover:drop-shadow-md mr-1" %>
    <%= link_to 'Delete', section, method: :delete,
                class: "hover:text-gray-800 hover:drop-shadow-md"  %>
  </span>
</section>